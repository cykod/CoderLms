.navbar-header
  %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar
  %a.navbar-brand{:href => "#"} Coder LMS
.navbar-collapse.collapse
  - if current_user
    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          = current_user.name
          %b.caret
        %ul.dropdown-menu
          - if current_user.admin?
            %li
              %a{href: "/admin", data: { no_turbolink: true }} Admin
          %li
            %a{:href => ""} Edit Account
          %li.divider
          %li
            = link_to "Logout", user_sessions_path, data: {  method: "delete" }
  - else
    %ul.nav.navbar-nav.navbar-right
      %li
        =link_to "Sign in with GitHub", '/auth/github'
